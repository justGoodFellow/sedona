footer.page-footer
  .page-footer__container
    .page-footer__column
      .page-footer__hashtag
        a.page-footer__hashtag-link(href='https://twitter.com/hashtag/visitsedona' target='blank')
          | #visitsedona
    .page-footer__column
      .page-footer__social
        ul.social-links
          li.social-links__item
            a.social-links__link.social-links__link--tw(href='#' target='_blank')
              span
                | Twitter
              svg(width='17' height='15')
                use(xlink:href='img/symbols.svg#icon-twitter')
          li.social-links__item
            a.social-links__link.social-links__link--fb(href='#' target='_blank')
              span
                | Facebook
              svg(width='12' height='22')
                use(xlink:href='img/symbols.svg#icon-facebook')
          li.social-links__item
            a.social-links__link.social-links__link--yt(href='#' target='_blank')
              span
                | Youtube
              svg(width='20' height='16')
                use(xlink:href='img/symbols.svg#icon-youtube')
    .page-footer__column
      .page-footer__credits
        span.page-footer__description
          | Website by
        a.page-footer__credits-logo(href='https://htmlacademy.ru/intensive/htmlcss' target='_blank')
          span
            | htmlacademy
          svg(width='115' height='39')
            use(xlink:href='img/symbols.svg#logo-htmlacademy')
